<div class="container">
  <%= simple_form_for @flat do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :price_per_night %>
    <%= f.input :number_of_guests %>
    <%= f.submit class: "btn btn-outline-primary my-3" %>
  <% end %>

  <%= link_to "Back to flats", flats_path, class: "btn btn-outline-secondary m-1" %>
</div>
