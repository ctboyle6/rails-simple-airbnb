<h2 class="border p-2 m-3 rounded"><%= @flat.name %></h2>

<div class="card-body">
  <img src="https://source.unsplash.com/random/300x100" class="card-img-top img-fluid">
  <p class="card-text"><%= @flat.description %></p>
  <p class="card-text"><%= @flat.address %></p>
  <div class="d-flex flat-specs-row mx-3">
    <div class="d-flex flat-occupancy mx-3">
      <i class="fas fa-user-friends"></i>
      <p><%= @flat.number_of_guests %></p>
    </div>
    <div class="d-flex flat-price mx-3">
      <i class="fas fa-dollar-sign"></i>
      <p><%= @flat.price_per_night %></p>
    </div>
  </div>
  <div class="buttons d-flex">
    <%= link_to "Back to flats", flats_path, class: "btn btn-outline-secondary m-1" %>
    <%= link_to "Edit this flat", edit_flat_path(@flat), class: "btn btn-outline-secondary m-1" %>
    <%= link_to "Remove this flat", flat_path(@flat), method: :delete, data: { confirm: "Really really??"}, class: "btn btn-outline-danger m-1" %>
  </div>
</div>
