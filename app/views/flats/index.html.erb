<h2 class="border p-2 m-3 rounded">All of our flats: <%= Flat.count %> available</h1>

<ul class="list-inline">
  <% @flats.each do |flat| %>
    <li class="list-inline-item">
      <div class="card" style="width: 24rem;">
        <img src="https://source.unsplash.com/random" class="card-img-top">
        <div class="card-body">
          <h3 class="card-title"><%= flat.name %></h3>
          <p class="card-text"><%= flat.description %></p>
          <p class="card-text"><%= flat.address %></p>
          <div class="d-flex flat-specs-row mx-3">
            <div class="d-flex flat-occupancy mx-3">
              <i class="fas fa-user-friends"></i>
              <p><%= flat.number_of_guests %></p>
            </div>
            <div class="d-flex flat-price mx-3">
              <i class="fas fa-dollar-sign"></i>
              <p><%= flat.price_per_night %></p>
            </div>
          </div>
          <div class="buttons d-flex">
            <%= link_to "More Info", flat_path(flat), class: "btn btn-outline-secondary m-1" %>
            <%= link_to "Edit", edit_flat_path(flat), class: "btn btn-outline-secondary m-1" %>
            <%= link_to "Remove", flat_path(flat), method: :delete, data: { confirm: "Really really??"}, class: "btn btn-outline-danger m-1" %>
          </div>
        </div>
      </div>
    </li>
  <% end %>
</ul>


