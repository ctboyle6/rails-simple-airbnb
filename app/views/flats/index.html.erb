<h2 class="border p-2 m-3 rounded">All of our flats: <%= Flat.count %> available</h1>

<ul class="list-inline">
  <% @flats.each do |flat| %>
    <li class="list-inline-item">
      <div class="card mx-auto" style="width: 24rem;">
        <img src="https://source.unsplash.com/random/300x180" class="card-img-top">
        <div class="card-body">
          <div class="card-header">
            <h3 class="card-title"><%= flat.name %></h3>
          </div>

          <ul class="list-group list-group-flush">
            <li class="list-group-item"><p class="card-text"><%= flat.description %></p></li>
            <li class="list-group-item"><p class="card-text"><%= flat.address %></p></li>
            <li class="list-group-item">
              <div class="d-flex flat-specs-row">
                <div class="d-flex flat-occupancy me-3">
                  <i class="fas fa-user-friends"></i>
                  <p><%= flat.number_of_guests %></p>
                </div>
                <div class="d-flex flat-price">
                  <i class="fas fa-dollar-sign"></i>
                  <p><%= flat.price_per_night %></p>
                </div>
              </div>
            </li>
          </ul>



          <div class="buttons d-flex">
            <%= link_to "More Info", flat_path(flat), class: "btn btn-outline-secondary m-1" %>
            <%= link_to "Edit", edit_flat_path(flat), class: "btn btn-outline-secondary m-1" %>
            <%= link_to "Remove", flat_path(flat), method: :delete, data: { confirm: "Really really??"}, class: "btn btn-outline-danger m-1" %>
          </div>
        </div>
      </div>
    </li>
  <% end %>
</ul>


