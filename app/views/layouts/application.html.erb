<!DOCTYPE html>
<html>
  <head>
    <title>RailsSimpleAirbnb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  </head>

  <body>
    <div class="navbar bg-white p-3 d-flex">
      <h1>Simple Airbnb</h1>
      <input type="text" class="form-control w-25" id="search-input" placeholder="Search">
      <%= link_to "Add Flat", new_flat_path, class: "btn btn-outline-secondary my-2 my-sm-0 ml-2" %>
    </div>
    <%= yield %>
  </body>
</html>
